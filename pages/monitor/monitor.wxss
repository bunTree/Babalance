/* 页面容器 */
.container {
  min-height: 100vh;
  padding: 0 30rpx 180rpx;
  box-sizing: border-box;
  transition: background 0.3s ease;
}

/* 动态背景 */
.container-default {
  background: linear-gradient(135deg, #ffeef8 0%, #ffe0f0 100%);
}

.container-boy {
  background: linear-gradient(135deg, #e6f3ff 0%, #ccebff 100%);
}

.container-girl {
  background: linear-gradient(135deg, #ffeef8 0%, #ffe0f0 100%);
}

/* 状态栏占位 */
.status-bar {
  width: 100%;
}

/* 主卡片容器 */
.main-card {
  width: 100%;
  max-width: 640rpx;
  margin: 20rpx auto 0;
  background: white;
  border-radius: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

/* 指标概览区域 */
.metrics-section {
  padding: 60rpx 40rpx 50rpx;
  text-align: center;
  position: relative;
  transition: background 0.3s ease;
}

.metrics-section.container-default,
.metrics-section.container-girl {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
}

.metrics-section.container-boy {
  background: linear-gradient(135deg, #4facfe 0%, #00b4db 100%);
}

.metrics-title {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
}

.metrics-grid {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.metric-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  max-width: 120rpx;
}

.metric-icon {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.metric-value {
  color: white;
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 8rpx;
}

.metric-label {
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.metric-unit {
  color: rgba(255, 255, 255, 0.7);
  font-size: 20rpx;
}

.metrics-date {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 20rpx;
}

/* 图表区域 */
.chart-section {
  padding: 50rpx 40rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
}

.chart-type-tabs {
  display: flex;
  gap: 20rpx;
}

.chart-tab {
  padding: 16rpx 32rpx;
  background: #f8fafc;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #64748b;
  transition: all 0.3s ease;
}

.chart-tab.active {
  background: #667eea;
  color: white;
}

/* 时间选择器 */
.time-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  padding: 8rpx;
  background: #f8fafc;
  border-radius: 24rpx;
}

.time-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 16rpx;
  font-size: 28rpx;
  color: #64748b;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.time-btn.active {
  background: white;
  color: #667eea;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 图表容器 */
.chart-container {
  background: #f8fafc;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.chart-canvas {
  width: 100%;
  height: 400rpx;
  background: white;
  border-radius: 16rpx;
}

/* 智能分析区域 */
.analysis-section {
  padding: 50rpx 40rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.analysis-content {
  font-size: 30rpx;
  color: #4a5568;
  line-height: 1.6;
  margin-top: 20rpx;
  background: #f8fafc;
  padding: 30rpx;
  border-radius: 20rpx;
  border-left: 6rpx solid #667eea;
}

/* 历史记录区域 */
.history-section {
  padding: 50rpx 40rpx;
}

.section-action {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.records-list {
  margin-top: 30rpx;
}

.record-card {
  background: #f8fafc;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #667eea;
}

.record-date {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 20rpx;
}

.record-measurements {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.measurement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.measurement-label {
  font-size: 28rpx;
  color: #64748b;
}

.measurement-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a202c;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 20rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #94a3b8;
  line-height: 1.5;
}

/* 弹窗样式 - 复用profile页面的样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  padding: 60rpx;
  box-sizing: border-box;
}

.modal-content {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 40rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-body {
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-group {
  width: 100%;
  max-width: 400rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-label {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #4a5568;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #2d3748;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
}

.picker-text {
  color: #2d3748;
}

.picker-arrow {
  font-size: 32rpx;
}

.modal-footer {
  display: flex;
  padding: 40rpx 50rpx;
  gap: 30rpx;
  background: #f8fafc;
}

.btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-cancel {
  background: #e2e8f0;
  color: #64748b;
}

.btn-cancel:active {
  background: #cbd5e0;
}

.btn-primary {
  background: #667eea;
  color: white;
}

.btn-primary:active {
  background: #5a67d8;
}

.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
} 