/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 全局样式 */
page {
  background-color: #f8fafc;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  line-height: 1.6;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.page-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 32rpx;
  color: #64748b;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 40rpx;
  padding: 50rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 50rpx rgba(0,0,0,0.08);
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

/* 渐变卡片 */
.gradient-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 20rpx 50rpx rgba(102, 126, 234, 0.3);
}

/* 指标卡片 */
.metric-cards {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-bottom: 50rpx;
}

.metric-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  border-radius: 40rpx;
  color: white;
  box-shadow: 0 20rpx 50rpx rgba(102, 126, 234, 0.3);
  text-align: center;
}

.metric-value {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.metric-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.trend-icon {
  width: 32rpx;
  height: 32rpx;
  filter: invert(1);
}

/* 表单样式 */
.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 30rpx;
  border: 4rpx solid #e5e7eb;
  border-radius: 24rpx;
  font-size: 32rpx;
  background: white;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  outline: none;
}

.input-unit {
  position: relative;
}

.input-unit::after {
  content: attr(data-unit);
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #9ca3af;
  font-size: 28rpx;
  pointer-events: none;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.radio-option {
  padding: 24rpx 32rpx;
  border: 4rpx solid #e5e7eb;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #64748b;
  background: white;
  text-align: center;
  transition: all 0.3s ease;
}

.radio-option.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 按钮样式 */
.btn {
  padding: 36rpx;
  border-radius: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 20rpx 50rpx rgba(102, 126, 234, 0.3);
}

.btn-secondary {
  background: #f1f5f9;
  color: #64748b;
}

/* 信息条目 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f1f5f9;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #64748b;
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a202c;
}

.edit-btn {
  padding: 12rpx 24rpx;
  background: #f1f5f9;
  color: #64748b;
  border: none;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

/* 洞察提示 */
.insights {
  background: #fef3c7;
  border-radius: 30rpx;
  padding: 40rpx;
  border-left: 8rpx solid #f59e0b;
  margin-top: 40rpx;
}

.insights-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #92400e;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.insights-text {
  font-size: 28rpx;
  color: #92400e;
  line-height: 1.6;
}

/* 图表容器 */
.chart-container {
  background: white;
  border-radius: 40rpx;
  padding: 50rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 50rpx rgba(0,0,0,0.08);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.chart-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
}

.time-selector {
  display: flex;
  gap: 16rpx;
}

.time-btn {
  padding: 16rpx 32rpx;
  border: none;
  border-radius: 40rpx;
  background: #f1f5f9;
  color: #64748b;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.time-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.flex { display: flex; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }

.mb-20 { margin-bottom: 20rpx; }
.mb-40 { margin-bottom: 40rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-40 { margin-top: 40rpx; }
